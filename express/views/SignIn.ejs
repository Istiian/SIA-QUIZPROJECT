    <script>
        const BarBtn = document.querySelector('#BarBtn');
        const XBtn = document.querySelector('#XBtn');
        const DropDownLinks = document.querySelector('#DropDownLinks');

        BarBtn.onclick = function(){    
            XBtn.classList.toggle("active");
            BarBtn.classList.toggle("inactive");
            DropDownLinks.classList.add("active");
        }

        XBtn.onclick = function(){    
            XBtn.classList.toggle("active");
            BarBtn.classList.toggle("inactive");
            DropDownLinks.classList.remove("active");

        }

        const RegisterBtn = document.querySelector(".RegisterBtn");
        const InnerContainer = document.querySelector(".InnerContainer");
        const OuterContainer = document.querySelector(".OuterContainer");
        const SignInContainer = document.querySelector(".SignInContainer");
        const SignUpContainer = document.querySelector(".SignUpContainer");
        const XFormBtns = document.querySelectorAll(".XFormBtn");
        const SignUpLink = document.querySelector(".SignUpLink");

        RegisterBtn.onclick = function(){
            OuterContainer.classList.add("active");
            InnerContainer.classList.add("active");
            SignInContainer.classList.add("active");
        }

        XFormBtns.forEach(XFormBtn => {
            XFormBtn.onclick = function(){
            OuterContainer.classList.remove("active");
            InnerContainer.classList.remove("active");
            SignUpContainer.classList.remove("active");
            SignInContainer.classList.add("active");
        }
        });

        SignUpLink.onclick = function (){
            SignInContainer.classList.remove("active");
            SignUpContainer.classList.add("active");
        }   

     </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>   
